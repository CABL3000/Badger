	<script>
          $(document).ready(function(){
            $("#process").bind("click", function () {
              $("#content").mask("Searching the database...");
            });
				
            $("#cancel").bind("click", function () {
		$("#content").unmask();
            });
             $('#example_text').watermark($('#tableSelect').val())  
          });
